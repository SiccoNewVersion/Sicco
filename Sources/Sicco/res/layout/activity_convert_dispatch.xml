<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbar_color" >

        <LinearLayout
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_size"
            android:background="@color/actionbar_color"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/actionbar_size"
                android:layout_height="@dimen/actionbar_size"
                android:background="@drawable/drawer_selector"
                android:clickable="true"
                android:padding="16dp"
                android:src="@drawable/ic_arrow_back_white_48dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/actionbar_size"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/job_transfer"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/send"
                android:layout_width="@dimen/actionbar_size"
                android:layout_height="@dimen/actionbar_size"
                android:background="@drawable/drawer_selector"
                android:clickable="false"
                android:padding="16dp" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
			<LinearLayout
			    android:id="@+id/lnTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/item_convert_job_selector" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    
                    android:textColor="@color/label_item"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/edtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
					android:hint="Nhap tieu de"
                    
                    android:layout_marginTop="7dp"
                    android:textColor="@color/label_item"
                    android:textSize="15dp"/>

            </LinearLayout>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/item_desc_color"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            
            <LinearLayout
			    android:id="@+id/lnJobType "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/item_convert_job_selector" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/job_type"
                    
                    android:textColor="@color/label_item"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtJobType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/everyday"
                    
                    android:layout_marginTop="7dp"
                    android:textColor="@color/label_item"
                    android:textSize="15dp"/>

            </LinearLayout>
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/item_desc_color"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            
            <LinearLayout
			    android:id="@+id/lnFromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" 
                android:background="@drawable/item_convert_job_selector">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/from_date"
                    
                    android:textColor="@color/label_item"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtFromDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" 
                    
                    android:layout_marginTop="7dp"
                    android:textColor="@color/label_item"
                    android:textSize="15dp"/>

            </LinearLayout>
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/item_desc_color"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
			    android:id="@+id/lnToDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" 
                android:background="@drawable/item_convert_job_selector">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to_date"
                    
                    android:textColor="@color/label_item"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtToDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" 
                    
                    android:layout_marginTop="7dp"
                    android:textColor="@color/label_item"
                    android:textSize="15dp"/>

            </LinearLayout>
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/item_desc_color"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
			    android:id="@+id/lnStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" 
                android:background="@drawable/item_convert_job_selector">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    
                    android:textColor="@color/label_item"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/execute"
                    
                    android:layout_marginTop="7dp"
                    android:textColor="@color/label_item"
                    android:textSize="15dp"/>

            </LinearLayout>
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/item_desc_color"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
			    android:id="@+id/lnProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/item_convert_job_selector" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/progress"
                    
                    android:textColor="@color/label_item"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/begin_progress"
                    
                    android:layout_marginTop="7dp"
                    android:textColor="@color/label_item"
                    android:textSize="15dp"/>

            </LinearLayout>
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/item_desc_color"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
			    android:id="@+id/lnLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" 
                android:background="@drawable/item_convert_job_selector">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/level"
                    
                    android:textColor="@color/label_item"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/normal"
                    
                    android:layout_marginTop="7dp"
                    android:textColor="@color/label_item"
                    android:textSize="15dp"/>

            </LinearLayout>
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/item_desc_color"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
			    android:id="@+id/lnHandler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" 
                android:background="@drawable/item_convert_job_selector">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/handler1"
                    
                    android:textColor="@color/label_item"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtHandler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/handler1"
                    
                    android:layout_marginTop="7dp"
                    android:textColor="@color/label_item"
                    android:textSize="15dp"/>

            </LinearLayout>
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/item_desc_color"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
			    android:id="@+id/lnViewer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" 
                android:background="@drawable/item_convert_job_selector">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/viewer"
                    
                    android:textColor="@color/label_item"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtViewer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/viewer"
                    
                    android:layout_marginTop="7dp"
                    android:textColor="@color/label_item"
                    android:textSize="15dp"/>

            </LinearLayout>
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/item_desc_color"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
			    android:id="@+id/lnDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" 
                android:background="@drawable/item_convert_job_selector">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/department"
                    
                    android:textColor="@color/label_item"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/department"
                    
                    android:layout_marginTop="7dp"
                    android:textColor="@color/label_item"
                    android:textSize="15dp"/>

            </LinearLayout>
            
            
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/item_desc_color"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/button1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_btn_login_selector"
                android:text="@string/covert"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                
                android:layout_marginBottom="30dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>